{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@config": ["./constants"],
      "@components": ["./components"],
      "@types": ["./types"],
      "@utils": ["./utils"],
    },
    "experimentalDecorators": true,
    "outDir": "./build/",
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "esnext",
    "lib": [
      "es6",
      "dom",
      "es2017"
    ],
    "moduleResolution": "node",
    "jsx": "preserve",
    "target": "esnext",
    "typeRoots": [
      "node_modules/@types",
      "./typings"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    ".config/**/*"
  ]
}
